<h4 id="ajax-following-count">Following: <%= @user.relationships.count %></h4>
			<% if current_user == @user %>
				<ul>
		  		<% @user.relationships.each do |relationship| %>
		  			<li><%= link_to "#{relationship.followed_user.first_name} #{relationship.followed_user.last_name}", relationship.followed_user %> <%= link_to "Unfollow", relationship, :method => :delete %></li>
		  		<% end %>  
				</ul>
			<% end %>