<h1>Log into your existing account</h1>
<p>Fill in your information below</p>

<hr/>

<div class="container">

  <% if flash[:alert] %>
    <div class="alert alert-success">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_tag session_path, :method => :post do %>
    <div class="span6">
      <%= text_field_tag :email, params[:email], placeholder: "Email address", class: "input-block-level" %>
      <%= password_field_tag :password, '', placeholder: "Password", class: "input-block-level" %>
      <div class="form-actions">
        <%= submit_tag 'Login', class: 'btn btn-primary' %>
      </div>
    </div>

<% end %>